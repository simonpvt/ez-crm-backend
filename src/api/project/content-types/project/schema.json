{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "website",
        "ecommerce",
        "web_app",
        "mobile_app",
        "landing",
        "blog",
        "redesign",
        "maintenance",
        "features",
        "seo",
        "audit",
        "api",
        "integration",
        "migration",
        "hosting",
        "branding",
        "plugin",
        "module",
        "database",
        "automation",
        "nocode",
        "advice",
        "mvp"
      ]
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "required": true,
      "default": "low"
    },
    "projectStatus": {
      "type": "enumeration",
      "default": "notStarted",
      "enum": [
        "not_started",
        "in_progress",
        "completed",
        "on_hold",
        "canceled"
      ],
      "required": true
    },
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::client.client",
      "inversedBy": "projects"
    },
    "clientPrice": {
      "type": "decimal"
    },
    "estimatedHours": {
      "type": "decimal",
      "required": true
    },
    "hourlyRate": {
      "type": "decimal",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "objectives": {
      "type": "text"
    },
    "deliverables": {
      "type": "text"
    },
    "notes": {
      "type": "text"
    },
    "tasks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::task.task",
      "mappedBy": "project"
    }
  }
}