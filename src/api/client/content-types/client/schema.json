{
  "kind": "collectionType",
  "collectionName": "clients",
  "info": {
    "singularName": "client",
    "pluralName": "clients",
    "displayName": "Client",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string"
    },
    "phoneNumber": {
      "type": "string"
    },
    "jobTitle": {
      "type": "string"
    },
    "company": {
      "type": "string"
    },
    "industry": {
      "type": "enumeration",
      "enum": [
        "agriculture",
        "automotive",
        "banking",
        "construction",
        "consulting",
        "education",
        "energy",
        "entertainment",
        "fashion",
        "finance",
        "food_and_beverage",
        "government",
        "healthcare",
        "hospitality",
        "insurance",
        "legal",
        "logistics",
        "manufacturing",
        "marketing",
        "media",
        "mining",
        "non_profit",
        "pharmaceutical",
        "real_estate",
        "retail",
        "software",
        "technology",
        "telecommunications",
        "transportation",
        "travel",
        "utilities",
        "other"
      ]
    },
    "website": {
      "type": "string"
    },
    "employeeCount": {
      "type": "string"
    },
    "clientStatus": {
      "type": "enumeration",
      "enum": [
        "prospect",
        "active",
        "inactive",
        "lost"
      ]
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ]
    },
    "address": {
      "type": "component",
      "component": "common.address",
      "repeatable": false
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project"
    },
    "interactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::interaction.interaction",
      "mappedBy": "client"
    },
    "notes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::note.note"
    }
  }
}
